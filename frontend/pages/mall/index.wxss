.mall-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF2E8 0%, #FFFFFF 100%);
}

.mall-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.points-display {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  color: #ffffff;
}

.points-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.points-text {
  font-size: 28rpx;
  font-weight: 600;
}

.categories-section {
  padding: 32rpx 0 16rpx;
  background: #ffffff;
}

.categories-scroll {
  white-space: nowrap;
}

.categories-list {
  display: flex;
  padding: 0 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  padding: 24rpx 16rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  background: #F8F8F8;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
}

.category-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  font-weight: 600;
  white-space: nowrap;
}

.products-section {
  padding: 32rpx;
}

.products-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.product-card {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  height: 200rpx;
  background: #F8F8F8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-img {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 24rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  display: flex;
  align-items: center;
}

.price-icon {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.price-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF9966;
}

.buy-btn {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
  border: none;
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.buy-btn:active {
  transform: scale(0.95);
}

.buy-btn.disabled {
  background: #CCCCCC;
  opacity: 0.6;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 32rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #F0F0F0;
  border-top: 3rpx solid #FF9966;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.load-more {
  text-align: center;
  padding: 32rpx;
}

.load-more-text {
  font-size: 28rpx;
  color: #999999;
}

.no-more {
  text-align: center;
  padding: 32rpx;
}

.no-more-text {
  font-size: 28rpx;
  color: #999999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}
