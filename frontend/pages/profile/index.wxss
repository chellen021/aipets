.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF2E8 0%, #FFFFFF 100%);
  padding: 32rpx;
}

.profile-header {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 153, 102, 0.3);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  color: #ffffff;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.user-level {
  font-size: 24rpx;
  opacity: 0.9;
}

.stats-section {
  margin-bottom: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF9966;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

.pet-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.pet-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.pet-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
}

.pet-image {
  width: 100%;
  height: 100%;
}

.pet-info {
  flex: 1;
}

.pet-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.pet-level {
  font-size: 24rpx;
  color: #FF9966;
  margin-bottom: 4rpx;
}

.pet-status {
  font-size: 20rpx;
  color: #666666;
}

.pet-action {
  margin-left: 16rpx;
}

.visit-btn {
  background: #F8F8F8;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #666666;
}

.visit-btn:active {
  background: #F0F0F0;
}

.menu-section {
  margin-bottom: 32rpx;
}

.menu-group {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #F8F8F8;
  background: transparent;
  border: none;
  width: 100%;
  text-align: left;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F8F8F8;
}

.share-item {
  background: transparent;
  border: none;
  border-radius: 0;
  padding: 32rpx 24rpx;
}

.logout-item {
  color: #FF4D4F;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.logout-item .menu-text {
  color: #FF4D4F;
}

.menu-arrow {
  font-size: 24rpx;
  color: #CCCCCC;
}

.app-info {
  text-align: center;
  padding: 32rpx 0;
}

.app-version {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.app-copyright {
  font-size: 20rpx;
  color: #CCCCCC;
}
