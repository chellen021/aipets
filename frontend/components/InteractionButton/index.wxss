.interaction-button {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(255, 153, 102, 0.3);
  transition: all 0.3s ease;
  overflow: hidden;
}

.interaction-button:active {
  transform: scale(0.95);
}

.interaction-button.animating {
  animation: bounce 0.3s ease;
}

.interaction-button.disabled {
  background: #CCCCCC;
  box-shadow: none;
  opacity: 0.6;
}

.button-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.button-label {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.cooldown-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
}

.cooldown-time {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
}

@keyframes bounce {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.interaction-button.feed {
  background: linear-gradient(135deg, #52C41A 0%, #389E0D 100%);
  box-shadow: 0 8rpx 16rpx rgba(82, 196, 26, 0.3);
}

.interaction-button.pet {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.3);
}

.interaction-button.play {
  background: linear-gradient(135deg, #FAAD14 0%, #D48806 100%);
  box-shadow: 0 8rpx 16rpx rgba(250, 173, 20, 0.3);
}

.interaction-button.clean {
  background: linear-gradient(135deg, #13C2C2 0%, #08979C 100%);
  box-shadow: 0 8rpx 16rpx rgba(19, 194, 194, 0.3);
}

.interaction-button.train {
  background: linear-gradient(135deg, #722ED1 0%, #531DAB 100%);
  box-shadow: 0 8rpx 16rpx rgba(114, 46, 209, 0.3);
}
