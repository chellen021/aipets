.upload-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF2E8 0%, #FFFFFF 100%);
  padding: 32rpx;
}

.upload-header {
  text-align: center;
  margin-bottom: 64rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.upload-area {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.image-preview {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  border: 4rpx dashed #E0E0E0;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.upload-placeholder:active {
  border-color: #FF9966;
  background: rgba(255, 153, 102, 0.05);
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.placeholder-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.placeholder-tip {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.4;
}

.upload-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 120rpx;
  background: #F8F8F8;
  border: none;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #F0F0F0;
  transform: scale(0.98);
}

.camera-btn {
  background: linear-gradient(135deg, #13C2C2 0%, #08979C 100%);
  color: #ffffff;
}

.album-btn {
  background: linear-gradient(135deg, #722ED1 0%, #531DAB 100%);
  color: #ffffff;
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 600;
}

.upload-progress {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.progress-bar {
  height: 8rpx;
  background: #F0F0F0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}

.upload-tips {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tip-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.tip-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.4;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: #ffffff;
  border-top: 1rpx solid #F0F0F0;
}

.generate-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(255, 153, 102, 0.3);
}

.generate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(255, 153, 102, 0.3);
}

.generate-btn.disabled {
  background: #CCCCCC;
  box-shadow: none;
  opacity: 0.6;
}

.loading-content {
  display: flex;
  align-items: center;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
