.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FF9966 0%, #FFF2E8 100%);
  display: flex;
  flex-direction: column;
  padding: 80rpx 64rpx 64rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 120rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.welcome-text {
  text-align: center;
  margin-bottom: 80rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.welcome-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

.login-actions {
  margin-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  color: #FF9966;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.login-btn.loading {
  opacity: 0.7;
}

.btn-content {
  display: flex;
  align-items: center;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.btn-loading {
  display: flex;
  align-items: center;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #FF9966;
  border-top: 3rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.unsupported-tip {
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
}

.login-footer {
  text-align: center;
}

.privacy-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

.link {
  color: #ffffff;
  text-decoration: underline;
}
