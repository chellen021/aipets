.interactive-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF2E8 0%, #FFFFFF 100%);
  padding: 32rpx;
}

.pet-display-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.pet-info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  width: 100%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.pet-basic-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.pet-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.pet-level {
  font-size: 28rpx;
  color: #FF9966;
  background: rgba(255, 153, 102, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.pet-status-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-top: 1rpx solid #F0F0F0;
  cursor: pointer;
}

.status-text {
  font-size: 28rpx;
  color: #666666;
}

.status-arrow {
  font-size: 20rpx;
  color: #999999;
  transition: transform 0.3s ease;
}

.status-arrow.expanded {
  transform: rotate(180deg);
}

.status-section {
  margin-bottom: 48rpx;
}

.interaction-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 32rpx;
  text-align: center;
}

.interaction-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  justify-items: center;
}

.quick-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.quick-action-btn {
  flex: 1;
  height: 120rpx;
  background: #ffffff;
  border: 2rpx solid #E0E0E0;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.quick-action-btn:active {
  transform: scale(0.98);
  background: #F8F8F8;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 600;
}

.mall-btn {
  border-color: #FF9966;
}

.mall-btn .action-text {
  color: #FF9966;
}

.profile-btn {
  border-color: #1890FF;
}

.profile-btn .action-text {
  color: #1890FF;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.create-pet-btn {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(255, 153, 102, 0.3);
}

.create-pet-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(255, 153, 102, 0.3);
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #F0F0F0;
  border-top: 4rpx solid #FF9966;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
