.leaderboard-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF2E8 0%, #FFFFFF 100%);
  padding: 32rpx;
}

.leaderboard-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.tabs-section {
  margin-bottom: 32rpx;
}

.tabs {
  display: flex;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 600;
}

.my-ranking {
  margin-bottom: 32rpx;
}

.my-rank-card {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(255, 153, 102, 0.3);
}

.rank-info {
  display: flex;
  flex-direction: column;
}

.rank-number {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.rank-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.rank-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  opacity: 0.8;
}

.ranking-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.list-header {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  display: flex;
  justify-content: flex-end;
}

.refresh-btn {
  background: #F8F8F8;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.refresh-btn:active {
  background: #F0F0F0;
}

.refresh-icon {
  margin-right: 8rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #F0F0F0;
  border-top: 3rpx solid #FF9966;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.ranking-items {
  padding: 0 32rpx 32rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F8F8F8;
  transition: all 0.3s ease;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-item:active {
  background: #F8F8F8;
}

.ranking-item.top-three {
  background: linear-gradient(135deg, rgba(255, 153, 102, 0.1) 0%, rgba(255, 255, 255, 0.1) 100%);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  margin-bottom: 16rpx;
}

.rank-badge {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.rank-text {
  font-size: 32rpx;
  font-weight: 600;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-detail {
  font-size: 24rpx;
  color: #666666;
}

.user-stats {
  display: flex;
  align-items: center;
}

.user-stats .stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF9966;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}
