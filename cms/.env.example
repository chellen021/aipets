# Strapi Server Configuration
HOST=0.0.0.0
PORT=1337
APP_KEYS="your_app_keys_here,another_key_here" # Generate with: openssl rand -base64 32,openssl rand -base64 32
API_TOKEN_SALT="your_api_token_salt_here" # Generate with: openssl rand -base64 32
ADMIN_JWT_SECRET="your_admin_jwt_secret_here" # Generate with: openssl rand -base64 32
TRANSFER_TOKEN_SALT="your_transfer_token_salt_here" # Generate with: openssl rand -base64 32

# Database Configuration (PostgreSQL example)
DATABASE_CLIENT=postgres
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_NAME=strapi_minipet_cms
DATABASE_USERNAME=strapi_user
DATABASE_PASSWORD=strapi_password
DATABASE_SSL=false

# Optional: Cloudinary for media uploads (example)
# CLOUDINARY_NAME=your_cloudinary_name
# CLOUDINARY_KEY=your_cloudinary_key
# CLOUDINARY_SECRET=your_cloudinary_secret

# URL of the Strapi application (important for email links, etc.)
# PUBLIC_URL=http://localhost:1337
# Or if deployed:
# PUBLIC_URL=https://your-strapi-domain.com