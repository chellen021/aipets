.calendar-checkin {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.month-nav {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0F0F0;
  border-radius: 50%;
  font-size: 32rpx;
  color: #666666;
}

.month-nav:active {
  background: #E0E0E0;
}

.month-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.weekdays {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  padding: 16rpx 0;
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day {
  width: calc(100% / 7);
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.calendar-day.other-month {
  opacity: 0.3;
}

.calendar-day.today {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
}

.calendar-day.checked-in {
  background: #52C41A;
  color: #ffffff;
}

.calendar-day.weekend {
  color: #FF4D4F;
}

.calendar-day.weekend.checked-in,
.calendar-day.weekend.today {
  color: #ffffff;
}

.day-number {
  font-size: 28rpx;
  font-weight: 600;
}

.checkin-indicator {
  position: absolute;
  bottom: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.checkin-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 50%;
  margin-bottom: 4rpx;
}

.points-text {
  font-size: 16rpx;
  color: #ffffff;
}

.today-indicator {
  position: absolute;
  bottom: 8rpx;
  font-size: 16rpx;
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.streak-info {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #F0F0F0;
  text-align: center;
}

.streak-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF9966;
  margin-bottom: 8rpx;
}

.streak-tip {
  font-size: 24rpx;
  color: #999999;
}
