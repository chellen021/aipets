/**app.wxss**/
@import './styles/variables.wxss';
@import './styles/mixins.wxss';

page {
  background-color: #FFF2E8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  color: #333333;
  font-size: 28rpx;
  line-height: 1.6;
}

.container {
  min-height: 100vh;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.page-container {
  padding: 32rpx;
  min-height: calc(100vh - 120rpx);
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.mb-32 {
  margin-bottom: 32rpx;
}

.mt-16 {
  margin-top: 16rpx;
}

.mt-32 {
  margin-top: 32rpx;
}

.p-16 {
  padding: 16rpx;
}

.p-32 {
  padding: 32rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(255, 153, 102, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(255, 153, 102, 0.3);
}

.btn-secondary {
  background: #ffffff;
  color: #FF9966;
  border: 2rpx solid #FF9966;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-secondary:active {
  background: #FFF2E8;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
  color: #999999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  color: #999999;
  text-align: center;
}

.empty-state .icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  color: #ffffff;
  padding: 24rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 9999;
}
