.confirm-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF2E8 0%, #FFFFFF 100%);
  padding: 32rpx 32rpx 120rpx;
}

.confirm-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.preview-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.image-preview {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 32rpx 24rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 600;
}

.retake-btn {
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #E0E0E0;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.retake-btn:active {
  background: rgba(255, 255, 255, 0.8);
}

.retake-icon {
  margin-right: 8rpx;
}

.name-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.name-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.name-input {
  flex: 1;
  height: 80rpx;
  background: #F8F8F8;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.name-input.error {
  border-color: #FF4D4F;
  background: #FFF2F0;
}

.name-input:focus {
  border-color: #FF9966;
  background: #ffffff;
}

.random-btn {
  width: 80rpx;
  height: 80rpx;
  background: #F8F8F8;
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.random-btn:active {
  background: #F0F0F0;
}

.name-error {
  color: #FF4D4F;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.name-tips {
  display: flex;
  gap: 24rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #999999;
}

.features-preview {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.feature-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
}

.feature-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.feature-name {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.feature-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF9966;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: #ffffff;
  border-top: 1rpx solid #F0F0F0;
}

.confirm-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF9966 0%, #FF6B35 100%);
  color: #ffffff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(255, 153, 102, 0.3);
}

.confirm-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(255, 153, 102, 0.3);
}

.confirm-btn.disabled {
  background: #CCCCCC;
  box-shadow: none;
  opacity: 0.6;
}

.loading-content {
  display: flex;
  align-items: center;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
